@model MyApp.Quizzmodel.Quizmodel

<h2>@Model.Subject Easy Level Quiz</h2>

<form asp-action="Mathematics_Easy" method="post">
    <input type="hidden" asp-for="@Model.User_Id">

    @for (int i=0; i<Model.Questions.Count;i++)
    {
        <h2>@Model.Questions[i].Question</h2>
        @for (int j=0;j<Model.Questions[i].Options.Count;j++)
        {
            <input type="radio" name="Questions[@i].UserOption" value="@Model.Questions[i].Options[j]" />
            @Model.Questions[i].Options[j]
        }
        <input type="hidden" name = "Questions[@i].CorrectAnswer" value="@Model.Questions[i].CorrectAnswer"/>
        <input type="hidden" name = "Questions[@i].id" value="@Model.Questions[i].id" /> 
        <input type="hidden" name = "Questions[@i].Question" value="@Model.Questions[i].Question" />
    }
    <br>
    <button type="submit">Submit Question</button>

</form>
